<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/student_hostel_view"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:src="@drawable/student_hostel_logo_app"
                    />
                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dehaze"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    />
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/details_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="-10dp"
                app:layout_constraintTop_toBottomOf="@id/img_3"
                android:background="@drawable/border_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:justifyContent="space-between"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Move in"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30/10/2024"
                            android:textSize="16sp"
                            android:drawablePadding="6dp"
                            android:drawableStart="@drawable/ic_edit_calendar"
                            android:textColor="@android:color/black"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Move out"
                            android:textSize="20sp"
                            android:layout_gravity="start"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30/11/2024"
                            android:textSize="16sp"
                            android:layout_gravity="start"
                            android:drawableStart="@drawable/ic_edit_calendar"
                            android:drawablePadding="6dp"
                            android:textColor="@android:color/black"
                            android:paddingTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guests 1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="8dp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All utilities are included"
                    android:textSize="16sp"
                    android:paddingBottom="16dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment timeline"
                    android:textSize="20sp"
                    android:paddingBottom="16dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reverse this apartment"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_circle"
                        android:drawablePadding="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Now"
                        android:textSize="14sp"
                        android:paddingTop="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$4000"
                        android:textSize="16sp"
                        android:layout_gravity="end"
                        android:textColor="@android:color/black"
                        android:paddingTop="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="After move-out"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_circle"
                        android:drawablePadding="4dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receive your $400 deposit back within 40 days"
                        android:textSize="14sp"
                        android:paddingTop="4dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_3"
                app:layout_constraintTop_toBottomOf="@id/tool_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_3"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="14dp"
                android:adjustViewBounds="true"
                />

            <TextView
                android:id="@+id/booking_rev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/details_room"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="18dp"
                android:text="Booking Review"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/booking_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/booking_rev"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="18dp"
                android:text="rent for month"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/price_booking_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2999"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/booking_month"
                android:layout_marginEnd="22dp"
                />

            <TextView
                android:id="@+id/utilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/booking_month"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="18dp"
                android:text="utilities per month"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/price_of_utilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$299"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/utilities"
                android:layout_marginEnd="22dp"
                />

            <TextView
                android:id="@+id/cleaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/utilities"
                android:layout_marginTop="12dp"
                android:layout_marginStart="18dp"
                android:text="One time cleaning fee "
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/price_of_cleaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$250"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cleaning"
                android:layout_marginEnd="22dp"
                />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/cleaning"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                />

            <TextView
                android:id="@+id/price_of_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/total"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                android:text="$3548"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/price_of_total"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="confirm and pay"
                android:backgroundTint="@drawable/btn_confirm"
                />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navigation_home"
                app:layout_constraintTop_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:itemBackground="@color/black"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/white"
                app:itemActiveIndicatorStyle="@color/white"
                android:layout_alignParentBottom="true"
                app:menu="@menu/navigation"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>